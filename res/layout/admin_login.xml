<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m_learning4socialskills.AdminLogin" >

     <TextView 
        android:id="@+id/txtv_1"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:text="Administrator Login"
        android:textColor="#0000FF"
       />
     
      <ImageView
       android:id="@+id/pic1"
        android:background="@drawable/icon_1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    
    <TextView 
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtv_1"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Admin_name"/>
    
    <EditText
        android:id="@+id/admin_name"
        android:layout_below="@+id/admin"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="35dp"
        android:background="@layout/rounded_border_edittext"
        android:gravity="center"
        android:ems="10"
        android:inputType="textVisiblePassword"/>"

        <requestFocus />
  
    
    <TextView 
        android:id="@+id/login_txt2"
        android:layout_below="@+id/admin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Password"/>

    <EditText
        android:id="@+id/login_pword"
        android:layout_below="@+id/login_txt2"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@layout/rounded_border_edittext"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="LogIn" />
</LinearLayout>
