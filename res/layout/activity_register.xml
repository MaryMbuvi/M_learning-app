<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Register">
    
    

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    
    <TextView
        android:id="@+id/regtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text="First Name" />

    <requestFocus />

    <EditText
        android:id="@+id/regfname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/regtxt2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/regtxt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/regfname"
        android:ems="10"
        android:text="Last Name" />

    <EditText
        android:id="@+id/reglname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/regtxt3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/regtxt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reglname"
        android:ems="10"
        android:text="UserName" />

    <EditText
        android:id="@+id/reguname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/regtxt4"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/regtxt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reguname"
        android:ems="10"
        android:text="Email" />

    <EditText
        android:id="@+id/regemail"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/regtxt5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/regtxt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/regemail"
        android:ems="10"
        android:text="Password" />

    <EditText
        android:id="@+id/regpassword"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/btnreg"
        android:layout_below="@+id/regtxt6"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@layout/rounded_border_edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword" />


    
    <TextView
        android:id="@+id/regtxt8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/regpassword"
        android:ems="10"
        android:text="Gender" />


    
    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbmale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rbChecked"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rbfemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="rbChecked"
            android:text="Female" />
    </RadioGroup>
    
    <TextView 
        android:id="@+id/occupationTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Select you occupation"
        android:layout_marginTop="10dp"/>
    
    <RadioGroup 
        android:id="@+id/occupationRadios"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/adminRadio"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:text="Admin"
            android:checked="false"
            />
        <RadioButton
            android:id="@+id/lecRadio"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:text="Lecturer"
            android:checked="false"
            />
        <RadioButton
            android:id="@+id/studentRadio"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" 
            android:text="Student"
            android:checked="false"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btnreg"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="Submit" />

    

</LinearLayout>

</ScrollView>