<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.m_learning4socialskills.Occupation" >

   <ImageView
       android:id="@+id/pic1"
        android:background="@drawable/icon_1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />
   
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/pic1"
        android:ems="10"
        android:text="Select Your Occupation" 
        android:textStyle="bold"/>
    
  <Button
        android:id="@+id/btnlecturer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/txt1"
        android:text="Lecturer" />

   <Button
        android:id="@+id/btnstudent"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/btnlecturer"
        android:text="Student" />
    
    <Button
        android:id="@+id/btnadmin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/btnstudent"
        android:text="Administrator" />
    
    <TextView 
        android:id="@+id/register"
        android:layout_below="@+id/btnadmin"
        android:text="Don't have an account? Click here to register"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="myMethod"
        android:clickable="true"/>
        
</LinearLayout>
